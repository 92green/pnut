{
  "name": "pnut",
  "version": "0.0.0",
  "description": "The new and improved pnut",
  "repository": {
    "type": "git",
    "url": "git@github.com:bigdatr/pnut.git"
  },
  "license": "MIT",
  "scripts": {
    "ava": "NODE_ENV=test ava",
    "build": "rm -rf lib && babel src --out-dir lib ",
    "build-examples": "cd example && yarn install && yarn run build && cd -",
    "check-coverage": "NODE_ENV=test nyc check-coverage --branches 100.0  --functions 100.0 --lines 100.0",
    "deploy-to-gh-pages": "yarn run build && yarn run build-examples && yarn run docs && node scripts/publish.js",
    "dev": "babel src -d lib --watch",
    "docs": "jsdoc -c jsdoc.json",
    "flow": "flow check",
    "lint": "eslint src --ext js,jsx",
    "lint-fix": "eslint src --ext js,jsx --fix",
    "prepublish": "yarn run build",
    "test": "NODE_ENV=test nyc --report-dir=./coverage ava && yarn run check-coverage",
    "test-all": "NODE_ENV=test yarn run lint && yarn run flow && yarn run test"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.5.0",
    "babel-core": "^6.5.0",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-plugin-transform-class-properties": "^6.18.0",
    "babel-preset-blueflag": "^0.3.0",
    "babel-preset-env": "^1.1.8",
    "babel-runtime": "^6.5.0",
    "enzyme": "^2.5.1",
    "eslint": "^2.7.0",
    "eslint-config-blueflag": "^0.4.0",
    "flow-bin": "^0.33.0",
    "gh-pages": "^0.11.0",
    "git-url-parse": "^6.0.1",
    "jsdoc": "^3.4.2",
    "jsdoc-babel": "^0.2.1",
    "jsdoc-react-proptypes": "^1.0.0",
    "jsdom": "^9.8.3",
    "jsdonk": "0.4.10",
    "node-sass": "^3.11.2",
    "nyc": "^10.0.0",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.0.0",
    "react-dom": "^15.3.2",
    "sinon": "^1.17.6"
  },
  "peerDependencies": {
    "react": "^15.3.2"
  },
  "dependencies": {
    "d3-interpolate": "^1.1.3",
    "d3-scale": "^1.0.4",
    "d3-shape": "^1.0.4",
    "immutable": "^3.8.1",
    "immutable-math": "^0.1.3",
    "stampy": "^0.12.0"
  },
  "main": "lib/index.js",
  "engines": {
    "npm": "^3.0.0"
  },
  "ava": {
    "require": "babel-register",
    "babel": {
      "presets": [
        "blueflag"
      ],
      "plugins": [
        "istanbul"
      ],
      "sourceMaps": "inline"
    },
    "files": [
      "src/**/*-test.js"
    ]
  },
  "nyc": {
    "all": true,
    "sourceMap": false,
    "instrument": false,
    "include": [
      "src/**"
    ],
    "exclude": [
      "src/**/*-test.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "extension": [
      ".js",
      ".jsx"
    ],
    "require": [
      "babel-register"
    ]
  }
}
